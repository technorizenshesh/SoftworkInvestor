<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginVertical="60dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Choose who you are"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="600"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textFontWeight="400"
        android:textSize="14sp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonInvestor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_edit_text"
            android:button="@null"
            android:drawableStart="@drawable/radio_selector"
            android:drawableEnd="@drawable/investor"
            android:drawablePadding="20dp"
            android:elevation="2dp"
            android:layoutDirection="rtl"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="Investor"
            android:textColor="@color/gray" />

        <RadioButton
            android:id="@+id/radioButtonBusiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_edit_text"
            android:button="@null"
            android:drawableStart="@drawable/radio_selector"
            android:drawableEnd="@drawable/business"
            android:drawablePadding="20dp"
            android:elevation="2dp"
            android:layoutDirection="rtl"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="Business Person"
            android:textColor="@color/gray" />
    </RadioGroup>

    <TextView
        android:id="@+id/textViewNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/background_button"
        android:elevation="2dp"
        android:fontFamily="@font/poppins_regular"
        android:padding="10dp"
        android:shadowColor="@color/white"
        android:text="Continue"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textFontWeight="600"
        android:textSize="18sp" />

</androidx.appcompat.widget.LinearLayoutCompat>
</layout>